{{#partial "content"}}
location-view
    <div class="container-fluid">
     <h1>Locations</h1>
        <hr>
        <div class="row">
            {{!--list locations --}}
            <div class="col-md-4">
                {{#if locations}}
                    {{#each locations as |location|}}
                        <div class="entries">
                            <p class="text" id={{location.id}}>{{location.name}}</p><br>
                            <a href="/view/location/sightings/{{location.id}}"><button class="btn btn-primary btn-md">View
                                Sightings</button></a>
                            <a href="/view/location/delete/{{location.id}}"><button class="btn btn-danger
                            btn-md">Delete Location</button></a>
                        </div>
                        <hr>
                        <br>
                    {{/each}}
                {{else}}
                    <p class="text display-7">There are no Locations! Create some<a href="/create/location"><button class = "btn btn-info btn-md">Create Location</button></a></p>
                {{/if}}
            </div>
            {{#if sightings}}

            <div class="col-md-8">
                    <div class="card text-white bg-info">
                        <div class="card-body">
                            <h1 class="card-title">Sightings</h1>
                                <hr>
                                <div class="col-md-4">
                                    <h3>Time</h3>
                                    <hr>
                                    {{#each sightings as |sighting|}}
                                        <li class="card-text ">{{sighting.time}}</li>
                                    {{/each}}
                                </div>
                                <div class="col-md-4">
                                    <h3>Animal</h3>
                                    <hr>
                                    {{#each animals as |animal|}}
                                        <li class="card-text ">{{animals}}</li>
                                    {{/each}}

                                </div>
                                <div class="col-md-4">
                                    <h3>Type</h3>
                                    <hr>
                                    {{#each types as |type|}}
                                        <li class="card-text ">{{type}}</li>
                                    {{/each}}

                                </div>

                        </div>
                    </div>
                {{else}}
                    <h3></h3>

                {{/if}}

            </div>
        </div>
    </div>

{{/partial}}
{{> layout.hbs}}
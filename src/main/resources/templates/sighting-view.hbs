{{#partial "content"}}
sightings-view
<div>
    <h1>Sightings</h1>
    <hr>
    <div class="row">
        {{#if sightings}}

            <div class="col-md-3">
                <h3>Animal</h3>
                <hr>
                {{#each animals as |animal|}}
                    <h3>{{animal}}</h3>
                {{/each}}
            </div>
            <div class="col-md-3">
                <h3>Time</h3>
                <hr>
                {{#each sightings as |sighting|}}
                    <h3>{{sighting.time}}</h3>
                {{/each}}
            </div>
        {{else}}
            <p class="text display-7">There are no sightings! Create some <a href = "/create/sighting"><button class = "btn btn-info btn-md">Create Sighting</button></a></p>
        {{/if}}
    </div>
</div>

{{/partial}}
{{> layout.hbs}}
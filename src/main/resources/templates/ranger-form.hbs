{{#partial "content"}}
ranger-form
    <div class="form">
        <form action="/create/ranger/new" method="post">
            <h2 class="text display-6">CREATE RANGER</h2>
            <hr>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="Ranger's Name" required>
            </div>
            <div class="form-group">
                <label for="badge">Badge Number</label>
                <input type="text" class="form-control form-control-lg" id="badge" name="badge" placeholder="Ranger's Badge Number"required>
            </div>
            <hr>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg"> Create </button>
            </div>
        </form>
    </div>

{{/partial}}
{{> layout.hbs}}